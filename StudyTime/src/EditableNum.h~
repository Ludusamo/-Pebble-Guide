#ifndef EDITABLENUM_H
#define EDITABLENUM_H

#include <pebble.h>
#include "Util.h"

struct EditableNum {
	bool editing;
	int num, MAX_NUM;	
	int x, y;
};

static void setEditing(bool editing) {
	edit->editing = editing;
}

static void updateEditLayer(Layer *layer, GContext *ctx) {

}

static void createEditLayer(struct EditableNum *edit, TextLayer *layer, Window *window) {
	layer = text_layer_create(GRect(edit->x, edit->y, 60, 30)); 
	text_layer_set_background_color(layer, GColorClear);
	text_layer_set_text_color(layer, GColorBlack);
	text_layer_set_text(layer, twoDigitToString(edit->num));
	text_layer_set_font(layer, fonts_get_system_font(FONT_KEY_BITHAM_30_BLACK));
	text_layer_set_text_alignment(layer, GTextAlignmentCenter);
	layer_add_child(window_get_root_layer(window), text_layer_get_layer(layer));
}

#endif //EDITABLENUM_H
